<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:background="@drawable/circle_avatar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="150dp"
    tools:context=".view.fragments.BottomSheetFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bMealImg"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/meal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                tools:ignore="ContentDescription,RtlSymmetry" />
            <LinearLayout
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/bMeal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:letterSpacing="0.02"
                        android:maxLines="2"
                        android:paddingStart="4dp"
                        app:drawableTint="@color/light_green"
                        android:paddingEnd="4dp"
                        android:text="Salmon Salad"
                        android:textColor="@color/deep_blue"
                        android:textIsSelectable="false"
                        android:drawablePadding="4dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_restaurant_menu"
                        tools:ignore="HardcodedText,RtlSymmetry,SpUsage" />

                    <TextView
                        android:id="@+id/bArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yangon"
                        android:textColor="@color/deep_blue"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:drawableTint="@color/light_green"
                        android:maxLines="2"
                        android:paddingEnd="4dp"
                        android:letterSpacing="0.02"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        tools:ignore="HardcodedText,RtlSymmetry"
                        app:drawableStartCompat="@drawable/ic_location" />
                </LinearLayout>

                <TextView
                    android:id="@+id/bCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seafood"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:paddingVertical="6dp"
                    android:textColor="@color/deep_blue"
                    android:textIsSelectable="false"
                    tools:ignore="HardcodedText"
                    app:drawableTint="@color/light_green"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/ic_fastfood" />

                <TextView
                    android:id="@+id/bReadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ReadMore..."
                    android:textStyle="bold"

                    android:textColor="@color/deep_green"
                    android:textSize="16sp"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="8dp"
                    android:textIsSelectable="false"
                    android:paddingVertical="6dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>


</androidx.cardview.widget.CardView>